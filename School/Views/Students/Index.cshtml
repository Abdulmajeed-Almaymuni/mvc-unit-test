@{
    ViewData["title"] = "Students";
    List<Student> students = (List<Student>)ViewData["Students"];
    bool added = (bool)ViewData["Added"];
}

<a href="/Students/Create" class="btn btn-success">Add New Student</a>
<br />
<br />
@if (added == true) {

    <div class="alert alert-success ">Student Added Successfully</div>
}

@if (students.Count > 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in students)
            {
                <tr>
                    <th scope="row">@student.Id</th>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Email</td>
                    <td><a href="/Students/Details/@student.Id" class="btn btn-warning">View</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p> No students found</p>
}
